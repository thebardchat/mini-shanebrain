# Facebook Graph API Credentials
# Get these from developers.facebook.com
FACEBOOK_PAGE_ID=your_page_id_here
FACEBOOK_ACCESS_TOKEN=your_never_expiring_page_token_here

# Facebook App Credentials (for token exchange - get from App Dashboard > Settings > Basic)
FB_APP_ID=your_app_id_here
FB_APP_SECRET=your_app_secret_here

# Anthropic API Key (for Claude AI content generation)
# Get from console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Use local Ollama instead of Claude
# Set to "true" to use Ollama, "false" or omit for Claude
USE_OLLAMA=false
OLLAMA_MODEL=llama3.2
OLLAMA_URL=http://localhost:11434

# Bot Settings
POST_SCHEDULE=0 9,14,19 * * *
# ^ Cron: 9am, 2pm, 7pm daily. Change as needed.

# Your page's personality/niche (helps AI generate relevant content)
PAGE_PERSONALITY=a friendly tech enthusiast sharing tips and thoughts
